<form action="submit">
        <h2>Job application Form</h2>
        <label for="firstname" id="firstname">firstname</label>
        <input type="text" name="firstname" placeholder="Enter your firstname" required>
        <label for="lastname" id="lastname">lastname</label>
        <input type="text" name="lastname" placeholder="Enter your lastname" required>
        <label for="email" id="email">Email</label>
        <input type="email" name="email" placeholder="Enter your email" required>
        <select name="Job Category" id="job-category">
            <option value="Choose your Job category" disabled>Choose your desired Job</option>
            <option value="Engineering">Engineering</option>
            <option value="Chef">Chef</option>
            <option value="Doctor"> Doctor</option>
            <option value="GoalKeeper"> GoalKeeper</option>
            <option value="Architecture"> Architecture</option>
        </select>
        <p>What is your gender</p>
        <input type="radio" name="gender" id="male" value="male" >
        <label for="male" id="male">Male</label>
        <input type="radio" name="gender" id="female" value="female">
        <label for="female" id="female">Female</label>
        <input type="radio" name="gender" id="not-say" value="not-say" >
        <label for="not say" id="not-say">not say</label>
        <p>What are your skills</p>
        <input type="checkbox" name="coding" id="coding" >
        <label for="coding" id="coding">Coding</label>
        <input type="checkbox" name="pastry" id="pastry" >
        <label for="pastry" id="pastry">pastry</label>
        <input type="checkbox" name="plumbing" id="plumbing" >
        <label for="plumbing" id="plumbing">plumbing</label>
        <input type="checkbox" name="cooking" id="cooking" >
        <label for="cooking" id="cooking">cooking</label>
        <input type="checkbox" name="drawing" id="drawing" >
        <label for="drawing" id="drawing">drawing</label>
        <input type="checkbox" name="skiing" id="skiing" >
        <label for="skiing" id="skiing">skiing</label>
        <button type="submit" id="submit">Submit</button>
    </form>






